{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sg-spec.local/schemas/coaching_draft_v1.schema.json",
  "title": "CoachingDraft v1",
  "description": "Output from Smart Guitar AI Coach. Contains constructive feedback without PII.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id", "schema_version", "kind", "model", "template", "feedback"],

  "properties": {
    "schema_id": {
      "const": "coaching_draft_v1"
    },
    "schema_version": {
      "const": "v1"
    },
    "kind": {
      "type": "string",
      "enum": ["groove_feedback", "practice_summary", "technique_hint", "repertoire_suggest"]
    },

    "model": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "runtime"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "version": { "type": "string" },
        "runtime": { "const": "local" }
      }
    },

    "template": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "version"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 }
      }
    },

    "feedback": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "description": "Constructive feedback items",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["category", "text", "evidence_refs"],
        "properties": {
          "category": {
            "type": "string",
            "enum": ["strength", "focus_area", "tip", "encouragement"]
          },
          "text": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "evidence_refs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["metric"],
              "properties": {
                "metric": { "type": "string", "minLength": 1 },
                "value": { "type": "number" }
              }
            }
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          }
        }
      }
    },

    "summary": {
      "type": "string",
      "maxLength": 200
    },

    "next_focus": {
      "type": "object",
      "properties": {
        "area": { "type": "string" },
        "reason": { "type": "string" },
        "exercise_hint": { "type": "string" }
      }
    },

    "groove_score": {
      "type": "object",
      "properties": {
        "overall": { "type": "number", "minimum": 0, "maximum": 100 },
        "trend": { "type": "string", "enum": ["improving", "stable", "needs_attention"] }
      }
    }
  }
}
