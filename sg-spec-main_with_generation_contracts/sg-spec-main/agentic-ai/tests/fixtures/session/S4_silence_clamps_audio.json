{
  "id": "S4_silence_clamps_audio",
  "description": "High silencePreference or userExplicitQuiet should suppress audio modality",
  "startMs": 2300000,
  "rngSequence": [0.99, 0.99, 0.99, 0.99],
  "steps": [
    {
      "label": "high_silence_pref",
      "in": {
        "at_ms": 2300000,
        "mode": "PRACTICE",
        "backoff": "L1",
        "signals": {
          "timeSinceLastNoteOnMs": 1400,
          "phraseBoundaryDetected": true,
          "timeSincePhraseBoundaryMs": 1200,
          "ignoreStreak": 0,
          "silencePreference": 0.9,
          "userExplicitQuiet": false
        }
      },
      "expect": {
        "shouldInitiate": true,
        "modalityNot": "audio"
      }
    },
    {
      "label": "explicit_quiet",
      "in": {
        "at_ms": 2340000,
        "mode": "PRACTICE",
        "backoff": "L1",
        "signals": {
          "timeSinceLastNoteOnMs": 1500,
          "phraseBoundaryDetected": true,
          "timeSincePhraseBoundaryMs": 1300,
          "ignoreStreak": 0,
          "silencePreference": 0.5,
          "userExplicitQuiet": true
        }
      },
      "expect": {
        "shouldInitiate": false,
        "reasonPrefix": "explicit_quiet"
      }
    }
  ],
  "aggregate": {
    "modalityMustAvoid": ["audio"]
  }
}
