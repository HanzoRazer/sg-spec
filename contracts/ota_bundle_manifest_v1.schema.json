{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ota_bundle_manifest_v1",
  "title": "OTA Bundle Manifest v1",
  "description": "Build manifest for sgc ota-bundle output. Tracks mode, timing, and output paths.",
  "type": "object",
  "required": ["schema_id", "schema_version", "mode", "generated_at_unix", "elapsed_s", "outputs"],
  "properties": {
    "schema_id": {
      "type": "string",
      "const": "ota_bundle_manifest"
    },
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "mode": {
      "type": "string",
      "enum": ["single-session", "single-pack", "per-pack", "multi-pack"],
      "description": "Build mode that produced this manifest"
    },
    "generated_at_unix": {
      "type": "integer",
      "description": "Unix timestamp when build started"
    },
    "elapsed_s": {
      "type": "number",
      "description": "Build duration in seconds"
    },
    "set": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "required": ["id", "pack_ids"],
          "properties": {
            "id": { "type": "string" },
            "pack_ids": {
              "type": "array",
              "items": { "type": "string" }
            },
            "summary": { "type": "object" }
          }
        }
      ],
      "description": "Pack set info (null for single-session/single-pack modes)"
    },
    "pack": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "required": ["pack_id", "display_name"],
          "properties": {
            "pack_id": { "type": "string" },
            "display_name": { "type": "string" },
            "difficulty": { "type": "string" }
          }
        }
      ],
      "description": "Single pack info (only present in single-pack mode)"
    },
    "outputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["bundle_dir"],
        "properties": {
          "bundle_dir": { "type": "string" },
          "zip_path": { "type": ["string", "null"] },
          "dance_pack_id": { "type": "string" },
          "display_name": { "type": "string" },
          "packs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["dance_pack_id", "display_name"],
              "properties": {
                "dance_pack_id": { "type": "string" },
                "display_name": { "type": "string" },
                "sub_bundle_dir": { "type": "string" }
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": { "properties": { "mode": { "const": "per-pack" } } },
      "then": { "required": ["set"] }
    },
    {
      "if": { "properties": { "mode": { "const": "multi-pack" } } },
      "then": { "required": ["set"] }
    },
    {
      "if": { "properties": { "mode": { "const": "single-pack" } } },
      "then": { "required": ["pack"] }
    }
  ]
}
