          "userExplicitQuiet": false
        }
      },
      "expect": {
        "shouldInitiate": false
      }
    }
  ],
  "aggregate": {
    "ignoreStreakThreshold": 3,
    "comment": "After ignoreStreak >= 3, shouldInitiate must be false due to budget clamp"
  }
}
